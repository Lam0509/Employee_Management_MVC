<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<form action="/show/<%= employee.id %>/update" method="post" enctype="multipart/form-data">
    <label for="id">ID</label>
    <input type="text" name="id" id="id" value="<%= employee.id %>">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= employee.name %>">
    <label for="phone">Phone</label>
    <input type="text" name="phoneNumber" id="phone" value="<%= employee.phoneNumber %>">
    <label for="address">Address</label>
    <input type="text" name="address" id="address" value="<%= employee.address %>">
    <input type="file" name="image">
    <button type="submit">Enter</button>
</form>
</body>
</html>